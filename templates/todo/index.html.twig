{% extends 'template.html.twig' %}

{% block body %}


    {% block PageTitle %}
        La liste des todos
    {% endblock %}

    <ol class="list-group">
        {% for name,content in app.session.get('todos') %}
            <ol class="list-group-item">
                {{ name }} : {{ content }}
            </ol>
        {% endfor %}
    </ol>

{% endblock %}

{% block title %}
    Todo
{% endblock %}